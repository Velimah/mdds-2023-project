{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/public/(.*)",  // Route requests to the public folder directly
      "dest": "public/$1"      // Serve files from the public folder
    },
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ]
}
